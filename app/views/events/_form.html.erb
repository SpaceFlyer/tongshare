<script type="text/javascript" src="/javascripts/jquery/jquery-ui-timepicker-addon.js"></script>
<script type="text/javascript" src="/javascripts/jquery/jquery.ui.datepicker-zh-CN.js"></script>

<%= form_for(@event, :html => {:id => "event_form"}) do |f| %>
    <% if @event.errors.any? %>
        <div id="error_explanation">
          <h2><%= I18n.t 'activerecord.errors.template.header', :count => @event.errors.count %></h2>

          <ul>
            <% @event.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div id="event_details">
      <fieldset>
        <div class="field">
          <%= f.label :name, :class=>"title" %>
          <%= f.text_field :name, :class=>"textvalue" %>
          <input type="checkbox" name="public" value="true" <%= @event.public? ? 'checked' : ''%>/>公开此活动
        </div>
        <div class="field">
          <%= f.label :begin, :class=>"title" %>
          <%= f.text_field :begin, :class=>"textvalue", :minute_interval => 1, :onchange => 'on_change_begin("#event_begin", "#event_end")', :value => @event.begin.strftime("%Y-%m-%d %H:%M") %>
        </div>
        <div class="field">
          <%= f.label :end, :class=>"title" %>
          <%= f.text_field :end, :class=>"textvalue", :minute_interval => 1, :onchange => 'on_change_end("#event_begin", "#event_end")', :value => @event.end.strftime("%Y-%m-%d %H:%M") %>
        </div>

        <script defer="defer" type="text/javascript">
            $('#event_begin').datetimepicker();
            $('#event_end').datetimepicker();
        </script>

        <div class="field">
          <%= f.label :location, :class=>"title" %>
          <%= f.text_field :location, :class=>"textvalue" %>
        </div>
        <div class="field">
          <%= f.label :extra_info, :class=>"title" %>
          <%= f.text_area :extra_info %>
        </div>
      </fieldset>
    </div>
    <div class="field">
      <label class="title">&nbsp;</label>
      <%= f.submit :submit, :value => "提交", :class=> 'link1 commit_button' %>
      <%= styled_button "取消", :back %>
    </div>

<% end %>
